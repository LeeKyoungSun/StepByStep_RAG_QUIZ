############################################################
# 기본 환경 설정
############################################################
ENV=production
APP_ENV=dev
DEBUG=false
APP_PORT=8000
LOG_LEVEL=info


############################################################
# 데이터베이스 설정
############################################################
# SQLAlchemy 호환 URL
DATABASE_URL=mysql+mysqlconnector://DB_USER:DB_PASSWORD@DB_HOST:3306/DB_NAME

# 별도 파라미터로 관리할 경우
DB_HOST=your-db-host.amazonaws.com
DB_PORT=3306
DB_NAME=stepbystep
DB_USER=root
DB_PASSWORD=your_password_here


############################################################
# Redis 캐시 설정
############################################################
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

CACHE_TTL=3600
SEARCH_CACHE_TTL=7200
MOD_CACHE_TTL=1800


############################################################
# OpenAI / 모델 설정
############################################################
OPENAI_API_KEY=your_openai_api_key_here

# 메인 모델
OPENAI_MODEL=gpt-4o-mini
GEN_MODEL=gpt-4o-mini

# 임베딩 모델
EMBED_MODEL=text-embedding-3-small


############################################################
# RAG / 검색기 설정
############################################################
ENABLE_BM25=true
ENABLE_RRF=true
ENABLE_RERANKER=false

TOP_K=3
CANDIDATE_K=5
RRF_K=120

W_FAISS=0.7
W_BM25=0.3
HYBRID_TOP_K=5


############################################################
# 인덱스 경로 설정
############################################################
FAISS_DIR=./data/indexes/merged/faiss
BM25_DIRS_FILE=.bm25_dirs.txt

# 시나리오 인덱스
SCENARIO_INDEX_ROOT=data/indexes
SCENARIO_TOPK=4


