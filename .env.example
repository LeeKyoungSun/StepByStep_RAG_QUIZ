# LLM / Embeddings
OPENAI_API_KEY=Your Key
OPENAI_MODEL=gpt-4o-mini
EMBED_MODEL=text-embedding-3-small

# Index paths
FAISS_DIR=./data/indexes/faiss
BM25_DIR=./data/indexes/bm25

# Light-Hybrid flags
ENABLE_BM25=true
ENABLE_RRF=true
ENABLE_RERANKER=false        # 라이트 모드: 기본 OFF

# Retrieval knobs
TOP_K=4                      # 최종 컨텍스트 개수 (3~5 추천)
CANDIDATE_K=6                # 각 리트리버 후보 개수 (5~8 추천)
RRF_K=60                     # RRF 상수 (50~100)

# Server
APP_ENV=dev
APP_PORT=8000
LOG_LEVEL=info